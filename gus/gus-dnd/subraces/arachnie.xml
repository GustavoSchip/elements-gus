        <description>
            <p>...
                ...
            </p>
        </description>
        <sheet>
            <description>...
                ...
            </description>
        </sheet>
		<rules>
			<grant type="Condition" id="ID_INTERNAL_CONDITION_DAMAGE_RESISTANCE_POISON" />
			<grant type="Grants" id="ID_INTERNAL_RACIAL_TRAIT_REPLACEMENT_TIEFLING_HELLISH_RESISTANCE" />
		</rules>
    </element>
</elements>
